<code class="jscode">&lt;script  runat=&quot;server&quot;&gt;
Sub user(source As object,args As ServerValidateEventArgs)
   if len(args.Value)&lt;8 or len(args.Value)&gt;16 then
    args.IsValid=false
   else
    args.IsValid=true
   end if
End Sub
&lt;/script&gt;</code>    

