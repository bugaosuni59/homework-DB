<html>
<head>
<script type="text/javascript">
var timer
function scrolltop()
{
document.getElementById('scrollmenu').style.top=document.body.scrollTop
timer=setTimeout("scrolltop()",1)
}
function stoptimer()
{
clearTimeout(timer)
}
</script>
</head>

<body onload="scrolltop()" onunload="stoptimer()">
