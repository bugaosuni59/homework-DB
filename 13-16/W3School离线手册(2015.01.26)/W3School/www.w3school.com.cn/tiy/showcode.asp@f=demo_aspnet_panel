<code class="jscode">&lt;script  runat=&quot;server&quot;&gt;
Sub Page_Load(sender As Object, e As EventArgs)
   if check1.Checked then
     panel1.Visible=false
   else
     panel1.Visible=true
   end if
End Sub
&lt;/script&gt;</code>

