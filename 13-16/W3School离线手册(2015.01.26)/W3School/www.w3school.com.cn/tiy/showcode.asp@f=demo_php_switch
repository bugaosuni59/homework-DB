switch ($favcolor) {
   case &quot;red&quot;:
     echo &quot;Your favorite color is red!&quot;;
     break;
   case &quot;blue&quot;:
     echo &quot;Your favorite color is blue!&quot;;
     break;
   case &quot;green&quot;:
     echo &quot;Your favorite color is green!&quot;;
     break;
   default:
     echo &quot;Your favorite color is neither red, blue, or green!&quot;;
}
